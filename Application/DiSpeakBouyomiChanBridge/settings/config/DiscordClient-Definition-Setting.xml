<?xml version="1.0" encoding="utf-8"?>
<!--
    =========================================
    == 内部簡易Discordクライアント定義設定 ==
    =========================================
-->
<Settings>
  <!--
      ################################
      ## 各種読み上げメッセージ定義 ##
      ################################
  -->
  <Item key="Format.InternalDiscordClient.PostPlainMessage"                     value="{NICKNAME}
{MESSAGE}" />
  <Item key="Format.InternalDiscordClient.PostMessageWithFile"                  value="{NICKNAME}がファイルを{FILE_COUNT}件送信しました。{FILE_NAMES}。
{MESSAGE}" />
  <Item key="Format.InternalDiscordClient.JoinVoiceChannleMessage"              value="{NICKNAME}が{TARGET_CHANNEL}に参加しました。" />
  <Item key="Format.InternalDiscordClient.LeaveVoiceChannleMessage"             value="{NICKNAME}が{SOURCE_CHANNEL}から退出しました。" />
  <Item key="Format.InternalDiscordClient.MoveVoiceChannleMessage"              value="{NICKNAME}が{SOURCE_CHANNEL}から{TARGET_CHANNEL}に移動しました。" />
  <Item key="Format.InternalDiscordClient.StartStreamingVoiceChannleMessage"    value="{NICKNAME}が配信を開始しました。" />
  <Item key="Format.InternalDiscordClient.EndStreamingVoiceChannleMessage"      value="{NICKNAME}が配信を終了しました。" />

  <Item key="Format.InternalDiscordClient.Replacement.Spoiler"                  value=" 禁則事項です！ " />
  <Item key="Format.InternalDiscordClient.Replacement.Mention.EveryOne"         value="チャンネル全員へ " />
  <Item key="Format.InternalDiscordClient.Replacement.Mention.Here"             value="オンラインのチャンネル全員へ " />
  <Item key="Format.InternalDiscordClient.Replacement.Mention.NickName"         value="{NICKNAME}へ " />
  <Item key="Format.InternalDiscordClient.Replacement.Mention.Channel"          value="{CHANNEL}チャンネルへ " />
  <Item key="Format.InternalDiscordClient.Replacement.Mention.Role"             value="{ROLE}へ " />

  <!--
      ############################################
      ## 各種読み上げメッセージ用置換文字列定義 ##
      ############################################
  -->
  <Item key="InternalDiscordClient.FormatReplaceKey.Guild"              value="{GUILD}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.Channel"            value="{CHANNEL}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.ChannelId"          value="{CHANNEL_ID}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.Role"               value="{ROLE}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.RoleId"             value="{ROLE_ID}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.UserId"             value="{USER_ID}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.UserName"           value="{USER_NAME}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.NickName"           value="{NICKNAME}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.Message"            value="{MESSAGE}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.FileCount"          value="{FILE_COUNT}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.FileNames"          value="{FILE_NAMES}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.BeforeChannel"      value="{SOURCE_CHANNEL}" />
  <Item key="InternalDiscordClient.FormatReplaceKey.AfterChannel"       value="{TARGET_CHANNEL}" />

  <Item key="InternalDiscordClient.MessageReplaceKey.Mention.EveryOne"  value="@everyone" />
  <Item key="InternalDiscordClient.MessageReplaceKey.Mention.Here"      value="@here" />
  <Item key="InternalDiscordClient.MessageReplaceKey.Mention.ChannelId" value="&lt;#{CHANNEL_ID}&gt;" />
  <Item key="InternalDiscordClient.MessageReplaceKey.Mention.RoleId"    value="&lt;@&amp;{ROLE_ID}&gt;" />
  <Item key="InternalDiscordClient.MessageReplaceKey.Mention.UserId"    value="&lt;@{USER_ID}&gt;" />

  <!--
      ############################
      ## 各種検出用正規表現定義 ##
      ############################
  -->
  <Item key="Regex.InternalDiscordClient.Spoiler"     value="\|\|.+?\|\|" />
</Settings>
