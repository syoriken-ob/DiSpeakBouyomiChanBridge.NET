<?xml version="1.0" encoding="utf-8"?>
<!--
    ==================================
    == システムアプリケーション設定 ==
    ==================================
-->
<Settings>
  <Item key="ListeningPort"                  value="50083" />
  <Item key="BouyomiChanPort"                value="50080" />
  <Item key="BouyomiChanHost"                value="localhost" />

  <Item key="RetryCount"                     value=""/>
  <Item key="RetrySleepTime.Milliseconds"    value="5000"/>

  <Item key="ShellPath"                      value="C:\Windows\System32\cmd.exe"/>
  <Item key="ShellOption"                    value="/C"/>

  <Item key="CommandFile"                    value="command.json" />
  <Item key="SystemCommandFile"              value="system-command.json" />

  <!-- DiSpeakを利用せず、内部簡易Discordクライアント機能を利用する(True:利用する,False:利用しない) -->
  <!-- 利用する場合DiscordSettingsセクションの設定が必要です -->
  <Item key="Use.InternalDiscordClient"      value="True" />
</Settings>
